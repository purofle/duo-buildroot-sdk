/dts-v1/;
#include "cv180x_base_riscv.dtsi"
#include "cv180x_asic_qfn.dtsi"
#include "cv180x_asic_sd.dtsi"
#include "cv180x_default_memmap.dtsi"

&mipi_rx{
	snsr-reset = <&portc 8 GPIO_ACTIVE_LOW>, <&portc 8 GPIO_ACTIVE_LOW>, <&portc 8 GPIO_ACTIVE_LOW>;
};

&spi2 {
	status = "okay";
	/delete-node/ spidev@0;
	st7789v: st7789v@0{
		compatible = "sitronix,st7789v_240x280";
		reg = <0>;
		status = "okay";
		spi-max-frequency = <48000000>;
		dc-gpios = <&porta 23 GPIO_ACTIVE_HIGH>;
		reset-gpios = <&porta 24 GPIO_ACTIVE_HIGH>;
		debug = <0x0>;
	};
};

&uart0 {
	status = "okay";
};

&i2c0 {
       status = "okay";
       clock-frequency = <100000>;

	   es8328: es8328@10 {
		#sound-dai-cells = <0>;
		compatible = "everest,es8328";
		reg = <0x10>;
	};
};

&i2s2 {
	status = "okay";
	#sound-dai-cells = <0>;
};

/ {
	model = "Milk-V Duo";
};

